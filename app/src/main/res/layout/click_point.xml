<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="@dimen/click_point_size"
    android:layout_height="@dimen/click_point_size">

    <ImageView
        android:id="@+id/iv_oval_bg"
        android:layout_width="@dimen/action_bar_icon_size"
        android:layout_height="@dimen/action_bar_icon_size"
        android:src="@drawable/oval" />

    <TextView
        android:id="@+id/tv_click_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/click_point_text"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="1" />

</FrameLayout>